<%= form_tag('/find_form') do %>

  <%= label_tag :for, 'Para', class: 'label' %>
  <%= text_field_tag(:for) + tag(:br) %>
  <%= label_tag :bloodtype, 'Tipo de sangre', class: 'label' %>
  <%= select_tag(:bloodtype,
  	options_for_select(
  	  [
  		['O+', 1], ['O-', 2],
  		['A+', 3], ['A-', 4],
  		['B+', 5], ['B-', 6],
  		['AB+', 7], ['AB-', 8]
  	  ],
  	1)) + tag(:br) %>
  <%= label_tag :city, 'Ciudad', class: 'label' %>
  <%= text_field_tag(:city) + tag(:br) %>
  <%= label_tag :phone, 'Telefono', class: 'label' %>
  <%= telephone_field(:user, :phone) + tag(:br) %>
  <%= label_tag :hospital, 'Hospital', class: 'label' %>
  <%= text_field_tag(:hospital) + tag(:br) %>
  <%= label_tag :address, 'DirecciÃ³n', class: 'label' %>
  <%= text_field_tag(:address) + tag(:br) %>
  <%= label_tag :hours, 'Horario', class: 'label' %>
  <%= text_field_tag(:hours) + tag(:br) %>
  <%= label_tag :email, 'Email', class: 'label' %>
  <%= email_field(:user, :email) + tag(:br) %>

  <%= submit_tag 'Buscar', class: 'submit flat-btn' %>

<% end %>